@{
    Layout = "/Views/admin/_AdminLayout.cshtml";
    Dictionary<string, string>  msg = ViewBag.msg;
    Dictionary<string, string> member = ViewBag.member;
    User[] users=ViewBag.users;
    Page pageInfo=ViewBag.pageInfo;
    string keywords= ViewBag.keywords;

 }

 <section class="panel panel-default">
            <div class="row wrapper">
                <div class="col-sm-5 m-b-xs">
                    <button class="btn btn-sm btn-default bulk-email">
                        Send Email
                    </button>
                      <button id="SetAsAdmin" class="btn btn-sm btn-default ">
                        SetAsAdmin
                    </button>
                    <button id="SetAsUser" class="btn btn-sm btn-default ">
                        SetAsUser
                    </button>
                      <button id="SetVerifiedTrue" class="btn btn-sm btn-default ">
                        Set Verified=true
                    </button>
                      <button id="SetVerifiedFalse" class="btn btn-sm btn-default ">
                        Set Verified=false
                    </button>
                </div>
                <div class="col-sm-4 m-b-xs">
                </div>
                <div class="col-sm-3">
                    <div class="input-group search-group">
                        <input type="text" class="input-sm form-control" placeholder="Username or Email" id="keywords" value="@keywords" />
                        <span class="input-group-btn">
                            <button class="btn btn-sm btn-default" type="button" data-url="/adminUser/index">Search</button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped b-t b-light">
                    <thead>
                        <tr>
                            <th width="20">
                                <input type="checkbox">
                            </th>
                            {{$url := urlConcat "/adminUser/index" "keywords" .keywords}}
                            <th {{sorterTh $url "email" .sorter}}>
                                Email
                                <span class="th-sort">
                                    <i class="fa fa-sort-down"></i>
                                    <i class="fa fa-sort-up"></i>
                                    <i class="fa fa-sort"></i>
                                </span>
                            </th>
                            <th {{sorterTh $url "username" .sorter}}>
                                Username
                                <span class="th-sort">
                                    <i class="fa fa-sort-down"></i>
                                    <i class="fa fa-sort-up"></i>
                                    <i class="fa fa-sort"></i>
                                </span>
                            </th>
                            <th {{sorterTh $url "verified" .sorter}}>
                                Verified
                                <span class="th-sort">
                                    <i class="fa fa-sort-down"></i>
                                    <i class="fa fa-sort-up"></i>
                                    <i class="fa fa-sort"></i>
                                </span>
                            </th>
                            <th {{sorterTh $url "createdTime" .sorter}}>
                                Register Date
                                <span class="th-sort">
                                    <i class="fa fa-sort-down"></i>
                                    <i class="fa fa-sort-up"></i>
                                    <i class="fa fa-sort"></i>
                                </span>
                            </th>
                            <th width="30">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in users)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="ck" data-email="@user.Email" data-id="@user.UserId.ToHex24()">
                                </td>
                                <td>
                                    <a target="_blank" href="/blog/@user.UserId.ToHex24()">@user.Email</a>
                                </td>
                                <td>
                                    @user.Username
                                </td>
                                <td>
                                   @user.Verified
                                </td>
                                <td>
                                  @user.CreatedTime
                                </td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-default reset-pwd" data-id="@user.UserId.ToHex24()}">Reset Password</a>
                                    <a href="#" class="btn btn-sm btn-default send-email" data-email="@user.Email">Send Email</a>
                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <button class="btn btn-sm btn-default bulk-email">
                            Send Email
                        </button>
                    </div>

                    <div class="col-sm-8 text-right text-center-xs">
                        {{set . "url" (urlConcat "/adminUser/index" "sorter" .sorter "keywords" .keywords)}}
                        {{template "admin/user/page.html" .}}
                    </div>
                </div>
            </footer>
        </section>

